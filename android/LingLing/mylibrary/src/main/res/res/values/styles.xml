<resources>
    <style name="Default.NoTitleBar" parent="@style/Default">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar" >false</item>
    </style>
    <style name="Default" parent="@android:style/Theme.Holo.Light" >
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">@dimen/top_bar_height</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin_1</item>
        <item name="android:layout_marginBottom">@dimen/margin_3</item>
    </style>

    <style name="bottem_title_image">
        <item name="android:layout_width">@dimen/height_30</item>
        <item name="android:layout_height">@dimen/height_30</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="homevipmanage_listitem_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="homemystaff_listitem_redtext">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="homemystaff_listitem_blacktext">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>
    <!-- 新QuickAction styles -->
    <style name="Animations" />
    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_top</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="bottomDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottomdialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottomdialog_exit</item>
    </style>

    <style name="FullScreenDialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@style/FullScreenDialog.Animation</item>
    </style>
    <style name="FullScreenDialog.Animation">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
    <!-- 顶部标题栏标题文本样式 -->
    <style name="topbarTittleTheme">
        <item name="android:textColor">@color/topbar_btn_text_color</item>
        <!--
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1</item>
        -->
    </style>


    <style name="AnimActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActivityTranslateAnim</item>
    </style>

    <style name="ActivityTranslateAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_left</item>
    </style>

    <style name="homemystaff_spinner_window_text">
        <item name="android:paddingTop">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:layout_marginTop">@dimen/margin_1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>

    <style name="ActionSheetDialogStyle">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画

    </style>
