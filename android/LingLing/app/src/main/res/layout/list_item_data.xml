<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ffffff"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/tou_list_item_data"
            android:layout_width="@dimen/x96"
            android:layout_height="@dimen/x96"
            android:layout_margin="@dimen/x20"
            android:background="@mipmap/tou_xiang"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帅哥"
                android:layout_marginTop="@dimen/x28"
                android:textSize="@dimen/x28"
                android:id="@+id/name_list_item_data"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一个小时之前"
                android:layout_marginTop="@dimen/x13"
                android:textSize="@dimen/x28"
                android:id="@+id/time_list_item_data"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x1"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_margin="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥666"
                android:textColor="#e2634d"
                android:textSize="@dimen/x24"
                android:id="@+id/price_list_item_data"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/s"
                android:layout_marginLeft="@dimen/x30"
                android:id="@+id/s_list_item_data"
                />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帅哥。我是帅哥,要不要与我相约九八~~"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:textColor="#3c3830"
        android:id="@+id/desc_list_item_data"
        />
    <GridView
        android:layout_margin="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GridView_list_item_data"
        android:numColumns="4"
        ></GridView>



</LinearLayout>