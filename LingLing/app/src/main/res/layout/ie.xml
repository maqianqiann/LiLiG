<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f7e3"  >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <View
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/colorPou"

            ></View>

        <ImageView

            android:id="@+id/imageView1"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/x26"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x26"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/yq" />

        <TextView
            android:id="@+id/txt_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@+id/imageView1"
            android:textColor="#807e7c"
            android:text="时间"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/txt_date_time"
            android:textColor="#32342a"
            android:text="描述"
            android:id="@+id/desc_ie"

            />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/colorPou" />

    <TextView
        android:id="@+id/txt_date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/x30"
        android:layout_toRightOf="@+id/v_line"
        android:textColor="#807e7c"
        android:text="2121"
        />

    <LinearLayout
        android:id="@+id/ll_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_date_content"

         android:layout_below="@id/txt_date_content"
        android:layout_marginRight="10dp"

        android:orientation="horizontal" >

        <GridView
            android:id="@+id/grid_list_item_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="20dp"
            android:numColumns="3"
            android:layout_marginLeft="@dimen/x140"

            />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>