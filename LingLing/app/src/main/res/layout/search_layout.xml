<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/qb_bj"
    >
  <!--<com.lingling.linglingdating.views.MySearchView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/searchView_search_layout"></com.lingling.linglingdating.views.MySearchView>-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#d8c2c0ac"
      >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/x116"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/x40"
      android:background="#d8c2c0ac"
      >

    <ImageView
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x32"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x22"
        android:background="@mipmap/fh_search"
        android:layout_gravity="center"
        android:id="@+id/image_back_search"
        />
    <SearchView
        android:layout_height="@dimen/x60"
        android:layout_width="@dimen/x482"
        android:layout_weight="1"
        android:queryHint="请输入搜索内容"
        android:id="@+id/edit_search"
        android:background="@mipmap/rw_wxz"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginRight="@dimen/x20"
        android:imeOptions="actionGo"
        ></SearchView>
    <Button
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/x55"
        android:text="确定"
        android:background="@mipmap/fb_zs"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginRight="@dimen/x20"
        android:id="@+id/but_sure_search"
        />

  </LinearLayout>
  <TextView
      android:text="搜索热词"
      style="@style/search_text" />
  <GridView
      android:layout_width="match_parent"
      android:layout_height="@dimen/x240"
      android:id="@+id/gridview_re_search"
      android:numColumns="4"
      android:gravity="center"
      android:layout_marginLeft="@dimen/x20"
      android:layout_marginRight="@dimen/x20"
      ></GridView>

  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d8c2c0ac"
        >


    <View
        android:background="#626262"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_margin="@dimen/x30"
        />
    <TextView
        android:text="搜索历史"
        style="@style/search_text" />
    <ListView
        android:layout_marginTop="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240"
        android:id="@+id/listview_ls_search_layout"
        ></ListView>
        <Button
            android:layout_width="@dimen/x660"
            android:layout_height="@dimen/x80"
            android:text="清除搜索历史"
            android:layout_gravity="center"
            android:background="@mipmap/fb_zs"
            android:layout_marginTop="@dimen/x100"
            android:textColor="#fff"
            android:textSize="@dimen/x32"
            android:id="@+id/but_clear_search"
            />
    </LinearLayout>
    
</LinearLayout>