<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/x116"
    android:background="#dfeee9e1"
    >
    <ImageView
        android:layout_width="@dimen/x96"
        android:layout_height="wrap_content"
        android:src="@mipmap/fh"
        android:layout_marginTop="@dimen/x50"
        android:id="@+id/image_back_include_more"
        />

    <TextView
        android:id="@+id/txt_name_include_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x96"
        android:text="粉丝"
        android:layout_marginLeft="@dimen/x220"
        android:layout_marginTop="@dimen/x40"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/x36"
        android:layout_marginBottom="@dimen/x30"
        android:textColor="#403f3d"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x2"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新定位"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x50"
        android:id="@+id/txt_dw_include_more"
        android:visibility="gone"
        />
</LinearLayout>