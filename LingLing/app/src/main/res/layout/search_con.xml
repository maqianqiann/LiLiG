<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/x116"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x40"
        >
        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x32"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x22"
            android:background="@mipmap/fh_search"
            android:layout_gravity="center"
            android:id="@+id/image_back_search_con"
            />
        <EditText
            android:layout_width="@dimen/x482"
            android:layout_height="@dimen/x60"
            android:background="@mipmap/rw_wxz"
            android:hint="搜索"
            android:id="@+id/edit_search_con"
            android:layout_weight="1"
            style="@style/margin" />
        <Button
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/x55"
            android:text="确定"
            android:background="@mipmap/fb_zs"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/but_sure_search_con"
            />

    </LinearLayout>
    <TextView
        android:text="搜索热词"
        style="@style/search_text" />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240"
        android:id="@+id/gridview_re_search_con"
        android:numColumns="4"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        ></GridView>

</LinearLayout>