<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="@dimen/x96"
    android:layout_height="@dimen/x96"
    android:background="@mipmap/tou_xiang"
    android:layout_margin="@dimen/x22"
    android:id="@+id/im_tou_listcon_item"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x136"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/txt_name_listcon_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x22"
            android:text="DS帅哥"
            android:layout_margin="@dimen/x20"
            android:textColor="#414142"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x20"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x22"
                android:text="回复"
                android:textColor="#616161"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x22"
                android:text="楼主:"
                android:textColor="#c12b72"
                />
            <TextView
                android:id="@+id/txt_con_listcon_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x22"
                android:text=" 一起相约九八~~"
                android:textColor="#373737"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_time_listcon_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x22"
        android:text="一个小时前"
        android:textColor="#808080"
        android:layout_margin="@dimen/x30"
        />

</LinearLayout>