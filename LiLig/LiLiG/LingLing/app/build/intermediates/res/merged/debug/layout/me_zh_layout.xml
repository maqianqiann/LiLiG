<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/qb_bj"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:orientation="horizontal"
        android:background="#d8ffffff"
        >
        <ImageView
            android:layout_width="@dimen/x96"
            android:layout_height="wrap_content"
            android:src="@mipmap/fh"
            android:layout_marginTop="@dimen/x30"
            android:id="@+id/image_back_change_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x96"
            android:text="我的账户"
            android:layout_marginLeft="@dimen/x220"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/x36"
            android:layout_marginBottom="@dimen/x30"
            android:textColor="#403f3d"

            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x35"
            android:id="@+id/txt_over_change_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d8ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x290"
            android:background="#f58abb"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="余额"
                android:textColor="#fff"
                 android:layout_marginTop="@dimen/x100"
                android:textSize="@dimen/x30"

                />
            <TextView
                android:layout_margin="@dimen/x30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="￥1000"
                android:textColor="#fff"
                android:textSize="@dimen/x48"

                />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x72"
        android:text="收入明细"
        android:textColor="#fff"
        android:background="#ad919b"
        android:layout_weight="1"
        style="@style/margin_s" />
    <Button
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x72"
        android:text="支出明细"
        android:textColor="#131313"
        style="@style/margin_s"
        android:layout_marginLeft="@dimen/x26"
        android:layout_weight="1"
        />
     </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_me_zh"
            ></ListView>

    </LinearLayout>




</LinearLayout>