<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/x116"
    android:text="约么"
    android:gravity="center"
    android:textSize="18sp"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/qb_bj"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="@dimen/x22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x116"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="#ae9f769f"
            android:text="想去的XXX地方，可是没人陪，不要紧，快来这里发布一个吧，寻找志同道合的有缘人！！！"
            android:gravity="center"
            android:textColor="#fff"
            android:padding="@dimen/x20"
       />

        <RelativeLayout
            android:layout_marginTop="@dimen/x136"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x272"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="#bbe5cfe0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/relative_yue"

            >

            <ImageView
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x160"
                android:src="@mipmap/ym_zb_fb"
                android:layout_marginTop="@dimen/x95"
                android:id="@+id/show_image_data"

                />

        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/x144"
            android:src="@mipmap/ym_xr"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x100"
            android:layout_centerHorizontal="true"
            />
        <ListView
            android:layout_below="@id/relative_yue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_margin="@dimen/x20"
            android:id="@+id/listView_data"
            >

        </ListView>

    </RelativeLayout>

</LinearLayout>