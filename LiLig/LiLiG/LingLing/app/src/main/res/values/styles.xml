<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="margin_s">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/x20</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:layout_marginBottom">@dimen/x20</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="linear_s">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x88</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#a9ffffff</item>
    </style>

    <style name="zh_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x98</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">#434343</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
