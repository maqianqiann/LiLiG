<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/x96"
    android:weightSum="1"
    android:background="#fff"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#57584e"
    android:text="附近的人"
    android:layout_marginLeft="@dimen/x22"
    android:layout_marginTop="@dimen/x25"
    android:id="@+id/txt_include_person"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="令令"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x200"
        android:textColor="#42423f"
        android:textSize="19sp"


        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_weight="1"
        />
    <ImageView

        android:layout_width="@dimen/x34"
        android:layout_height="@dimen/x34"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/image_include_search"
        android:background="@mipmap/ll_ss"
        />
    <ImageView
        android:layout_marginLeft="@dimen/x40"
        android:layout_width="@dimen/x38"
        android:layout_height="@dimen/x34"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/image_include_message"
        android:background="@mipmap/ll_zjlx"
        android:layout_marginRight="@dimen/x20"
        />


</LinearLayout>