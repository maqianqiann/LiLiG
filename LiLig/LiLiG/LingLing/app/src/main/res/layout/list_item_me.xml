<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f7e3" >
    <View
        android:id="@+id/v_line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x20"
        android:background="@color/colorPou" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
       >

        <ImageView

            android:id="@+id/imageView1"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/x26"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x26"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/yq" />

        <TextView
            android:id="@+id/txt_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x14"
            android:textSize="@dimen/x32"
            android:layout_toRightOf="@+id/imageView1"
            android:text="时间"

            android:textColor="#807e7c" />
        <TextView
            android:id="@+id/desc_list_item_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x90"
            android:layout_toRightOf="@+id/txt_list_item_time"
            android:paddingBottom="@dimen/x5"
            android:text="描述"
            android:textColor="#32342a" />

    </RelativeLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x10"
        android:background="#b5849c" />


    <TextView
        android:id="@+id/txt_date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/v_line"
        android:paddingBottom="10dp"
       />

    <LinearLayout
        android:id="@+id/ll_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_below="@+id/rl_title"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >


        <GridView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="20dp"
            android:numColumns="3"
            android:layout_marginLeft="@dimen/x140"
            />

     <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"

            />
    </LinearLayout>

</RelativeLayout>