<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <android.support.v4.view.ViewPager
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/viewPager_main"
      android:layout_weight="1"
      ></android.support.v4.view.ViewPager>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="50dp">
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingTop="8px">

      <RadioButton
          android:id="@+id/ling_ling_rd"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:button="@null"
          android:drawablePadding="3px"
          android:drawableTop="@drawable/ling_selector"
          android:gravity="center"
          android:text="令令" />

      <RadioButton
          android:id="@+id/yue_ling_rd"
          android:layout_width="0px"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:button="@null"
          android:drawablePadding="3px"
          android:drawableTop="@drawable/yue_selector"
          android:gravity="center"
          android:text="约么" />
      <RadioButton
          android:id="@+id/zb_ling_rd"
          android:layout_width="0px"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:button="@null"
          android:drawablePadding="3px"
          android:drawableTop="@drawable/zu_selector"
          android:gravity="center"
          android:text="租吧" />

      <RadioButton
          android:id="@+id/me_ling_rd"
          android:layout_width="0px"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:button="@null"
          android:drawablePadding="3px"
          android:drawableTop="@drawable/me_selector"
          android:gravity="center"
          android:text="ME" />
    </RadioGroup>
  </LinearLayout>
</LinearLayout>
